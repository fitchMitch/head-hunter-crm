<%= simple_form_for @job  do |f| %>

<div class="row ">
  <div class="col-sm-5 ">
    <%= f.association :company, label: t("Company"), label_method: :company_name, value_method: :id, include_blank: false %>
    <%= link_to  '/people/' + @job.person_id.to_s + '/addCompany' do%>
    <button type="button" class="btn btn-xs">
      <%= t("company.add") %>
    </button>
    <% end %>
  </div>
  <div class="col-sm-7 checkBelow "></div>
</div>
<div class="emptyline"></div>
<div class="row  ">
  <div class="col-sm-5">
    <%= f.input :job_title, label: t("job.last"), input_html: {class:" input-sm"}%>
    <%= f.input :person_id, as: :hidden %>
  </div>
  <div class="col-sm-7 ">
    <%= f.input :start_date, label: t("job.date_in"), as: :date,  end_year: Date.today.year, order: [:day, :month, :year], input_html:{class:" input-sm" } %>
  </div>
</div>

<div class="row ">
  <div class="col-sm-5">
    <%= f.input :salary, label: t("job.salary"), input_html:{class:" input-sm" } %>
  </div>
  <div class="col-sm-7 ">
    <%= f.input :end_date, label: t("job.date_end"), as: :date, end_year: Date.today.year, order: [:day, :month, :year], input_html:{class:" input-sm" } %>
  </div>
</div>

<div class="row ">
  <div class="col-sm-5">
    <%= f.input :jj_job, label: t("job.jj"), as: :boolean, input_html:{class:" checkBelow" }  %>
  </div>
  <div class="col-sm-7 ">
    <%= f.input :no_end, label: t("job.still_in"), as: :boolean, input_html:{class:" pushUp" }  %>
  </div>
</div>

<div class="row ">
  <div class="col-sm-5 ">
    <%= f.button :submit, yield(:button_text), class: "btn btn-success checkBelow" %>

  </div>
  <div class="col-sm-7  "></div>
</div>
<% end %>
