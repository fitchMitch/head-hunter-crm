<% provide(:title,t('user.login')) %>
<h1 class="center">
  <%=t('user.login') %>
</h1>

<div class='row'>
    <div class="col-md-6 col-md-offset-3">
        <%= simple_form_for(:session, url: login_path) do |f| %>
        <%= f.input :email %>
        <%= f.input :password, label:t('user.password')%>
        <%= f.input :remember_me, as: :boolean, label:t('user.remember_me'), label_html: { class: 'decalTxt10' }%>
        <%= f.button :submit,t('user.login'), class: "btn btn-success center-block" %>
        <div class='row'>
          <div class="col-xs-12 emptyline"></div>
        </div>
        <div class="row ">
            <div class="col-xs-12 center">
                <small class="center"><%= link_to t('user.authentication.forgotten_password'), new_password_reset_path %></small>
            </div>
        </div>
        <% end %>
    </div>
</div>
