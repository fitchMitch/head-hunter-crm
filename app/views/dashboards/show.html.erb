<% provide(:title,t('dashboard.title')) %>
<% provide(:button_text, t('dashboard.add_button')) %>
<% if logged_in? %>
  <h1 class="center">
    <%= t('dashboard.title') %>
  </h1>
  <hr>
  <div class="row">
    <div class="col-md-6">
      <h2>
        <%= t('dashboard.last_months') %>
      </h2>
      <div class="row">
        <div class="col-md-4">
          <%= t('dashboard.period') %>
        </div>
        <div class="col-md-4">
          <%= t('dashboard.activity_rate') %>
        </div>
        <div class="col-md-4">
          <%= t('dashboard.cashflow') %>
        </div>
      </div>
      <% @upper_dashboard.each do |dash|  %>
        <%= render partial: "upper_dashboard", locals: { dash: dash } %>
      <% end %>
    </div>
    <div class="col-md-6">
      <h2>
        <%= t('dashboard.other_data') %>
      </h2>
      <div class="row">
        <div class="col-md-6">
          <strong>
            <%= t('dashboard.missing_amount') %>
          </strong>
        </div>
        <div class="col-md-4">
          <strong>
            <%= number_to_currency @other_data[:other_pockets], precision: 0  %>
          </strong>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <strong>
            <%= t('dashboard.amount_still_to_work_on') %>
          </strong>
        </div>
        <div class="col-md-4">
          <strong>
            <%= number_to_currency @other_data[:work_to_finish], precision: 0  %>
          </strong>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <strong>
            <%= t('dashboard.cashflow') %>
          </strong>
        </div>
        <div class="col-md-4">
          <strong>
            <%= number_to_currency @other_data[:cash_flow], precision: 0  %>
          </strong>
        </div>
      </div>

    </div>
  </div>
  <div class='row'>
    <div class="col-md-6 col-md-offset-3">
      <!-- render 'form' -->
    </div>
  </div>
<% end %>
