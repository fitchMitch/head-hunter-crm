<div class="row spaceDown">
  <div class="col-xs-12">
    <%= search_form_for @q, html: {class: "form-inline"} do |f| %>
    <div class="input-group input-group-sm">
      <span class="input-group-addon" id="basic-addon1">
        <%= t("filter") %>
      </span>
      <%= f.select :status_eq , options_for_select(@missions_status, @status_selected), {},  {class: "form-control"} %>
    </div>
    <% end %>
    <%= link_to  missions_path, class: "btn btn-success" do %>
      <%= fa_icon("undo", text: t("reinit") ) %>
    <% end %>
  </div>
</div>
