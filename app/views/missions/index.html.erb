<% provide(:title, 'Liste des contrats') %>
<h1 class="center">Liste des missions</h1>

<%= will_paginate %>

<div class="row spaceDown">
  <div class="col-xs-12">
    <%= search_form_for @q, html: {class: "form-inline"} do |f| %>
      <%= f.select :status_eq , options_for_select(Mission::STATUSES.collect { |t| [ t, t] },@status_selected), {},  {class: "form-control"} %>
      <button type="submit" class="btn btn-info ">Filtrer <%= fa_icon("filter") %></button>
    <% end %>
    <%= link_to  missions_path, class: "btn btn-default" do %>
      <%= fa_icon("circle-o-notch") %>
    <% end %>
  </div>
</div>


<div class="row array_header">
  <div class="col-xs-1">
    <%= sort_link(@q, :whished_start_date, default_sorting: :asc) do %>
    <strong>Echéance</strong>
    <% end %>
  </div>
  <div class="col-xs-2">
    <%= sort_link(@q, :name, default_order: :asc) do %>
      <strong>Mission</strong>
    <% end %>
  </div>
  <div class="col-xs-2">
    <%= sort_link(@q, :status, default_order: :asc) do %>
      <strong>Statut</strong>
    <% end %>
  </div>
  <div class="col-xs-2">
    <%= sort_link(@q, :company_company_name, default_order: :asc) do %>
      <strong>Société</strong>
    <% end %>
  </div>
  <div class="col-xs-4">
      <strong>Contenu de la mission</strong>
  </div>
  <div class="col-xs-1">
    <%= sort_link(@q, :updated_at, default_order: :desc) do %>
      <small>Mise à jour</small>
    <% end %>
  </div>
</div>
<%= render @missions %>
<%= will_paginate %>
