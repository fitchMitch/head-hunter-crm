<%= simple_form_for @comaction  do |f| %>

<div class='row'>
    <div class="col-sm-7 ">
        <%= f.association :person, collection: Person.order(updated_at: :desc), label:'Pour', label_method: :full_name, value_method: :id, include_blank: false %>
        <%= link_to  'add_ext?model=person'  do%>
        <button type='button' class="btn btn-xs">
          <%= t("comaction.add_contact") %>
        </button>
        <% end %>
    </div>
    <div class="col-sm-5 ">
        <%= f.input :status, label: t("comaction.status"), collection: Comaction::STATUSES %>
    </div>
</div>
<div class="row ">
    <div class="col-sm-12">
        <%= f.input :name, label: t("comaction.label"), input_html: {class:" input-sm"}%>
    </div>
</div>
<div class="row ">
  <div class="col-xs-5">
    <%= f.input :action_type, label: t("comaction.type"), collection: Comaction::ACTION_TYPES %>
  </div>
  <div class="col-xs-7">
      <%= f.association :mission, collection: Mission.order(updated_at: :desc), label:t("comaction.mission"), value_method: :id, include_blank: false ,  input_html: {class: "form-control input-sm "} %>
  </div>
</div>
<div class='row'>
  <div class='col-sm-2'>
     <%= f.input :is_dated, as: :boolean, label: t("comaction.date_q"),  required: false, input_html: {class: ""} %>
  </div>
  <div class='col-sm-10 train-right'>
     <%= f.input :start_time, :as => :datetime, :minute_step => 15, :min_hour => 7, label: t("comaction.start.date_and_hour"),  required: false, :selected => @date, input_html: {class: "form-control input-sm"} %>
     <br>
     <%= f.input :end_time, label: t("comaction.end.date_and_hour"),  required: false,:selected => @date,  input_html: {class: "form-control input-sm"} %>
  </div>
</div>
<div class="row ">
    <div class="col-sm-2 pull-right  ">
        <%= f.button :submit, yield(:button_text), class: "btn btn-success checkBelow" %>
    </div>
</div>
<% end %>
