<% provide(:title, t("comaction.rdv")) %>
<% provide(:button_text, t("update_button")) %>
<% if logged_in? %>
  <h1 class='center'>
    <%= t("comaction.update_title") %>
  </h1>
  <div class='row'>
    <div class="col-md-6 col-md-offset-1">
      <%= render 'form' %>
    </div>
    <div class="col-md-4 " data-direction="left" >
      <% unless @freeZone_days.nil? %>
        <% @freeZone_days.each do |dday| %>
        <ul>
          <%= t(dday.first.start_period.strftime("%A")) %>
          <%= dday.first.start_period.strftime(" %d") %>
          <%= t(dday.first.start_period.strftime(" %b")) %>
          <% dday.each do |member| %>
            <li>
              <%= member.start_period.hour  %>
              <%= member.start_period.min  %>
            </li>
          <% end  %>
          </ul>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
