<% provide(:title, @comaction.name) %>

<div class="row">
    <div class="col-xs-9">
        <h1>
            <%= @comaction.name %>
            <%= link_to edit_comaction_path do %>
            <%= fa_icon('pencil') %>
            <% end %>
        </h1>
    </div>
    <div class="col-xs-3">
        <small>
            <div class="row">
                <div class="col-xs-5">Responsable</div>
                <div class="col-xs-7"><%= @comaction.user.name %></div>
            </div>

            <div class="row">
                <div class="col-xs-5">Créé</div>
                <div class="col-xs-7"><%= time_ago_in_words @comaction.created_at %></div>
            </div>

            <div class="row">
                <div class="col-xs-5">Mis à jour</div>
                <div class="col-xs-7"><%= time_ago_in_words @comaction.updated_at %></div>
            </div>
        </small>
    </div>
</div>
<div class="row">
    <div class="col-xs-9 col-xs-offset-3">
        <h3><%= @comaction.mission.name %></h3>
    </div>
</div>
<div class="row">
    <div class="col-xs-3 frameMe">
        <div class="row">
            <div class="col-xs-2">
                <%= fa_icon('calendar-o') %>
            </div>
            <div class="col-xs-10">
                <%= t (@comaction.start_time.strftime("%a")) %>
                <%= @comaction.start_time.strftime(" %d ") %>
                <%= t (@comaction.start_time.strftime("%b")) %>
                <br>
                <%= @comaction.start_time.strftime("%H:%M à ") %>
                <%= @comaction.end_time.strftime("%H:%M") %>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-2">
                <%= fa_icon('user-circle') %>
            </div>
            <div class="col-xs-10">
                <strong>
                  <%= link_to "#", class: "btn btn-primary" do %>
                    <%= fa_icon('search') %>
                  <% end %>
                </strong>
            </div>
        </div>
        <% unless @comaction.person.note.nil? %>
        <hr>
        <div class="row">
            <div class="col-xs-2">
                <%= fa_icon('file-o') %>
            </div>
            <div class="col-xs-10">
                <%= @comaction.person.note %>
            </div>
        </div>
        <% end %>
    </div>
    <div class="col-xs-5">
        <div class="row">
            <div class="col-xs-1">
                <br>
                <%= fa_icon("file-o 2x") %>
            </div>
            <div class="col-xs-11">
                <br>
                <p>
                    <%= @comaction.mission.criteria %>
                </p>
            </div>
        </div>
    </div>
    <div class="col-xs-2 col-xs-offset-1">
        <div class="row">
            <div class="col-xs-5">
                <strong>Progression</strong>
            </div>
            <div class="col-xs-7"><%= @comaction.status %></div>
        </div>
        <div class="row">
            <div class="col-xs-5">
                <strong>Type</strong>
            </div>
            <div class="col-xs-7"><%= @comaction.action_type %></div>
        </div>
        <div class="row">
            <div class="col-xs-5">
                <strong>Contact</strong>
            </div>
            <div class="col-xs-7">
                <%= @comaction.mission.person.full_name %>
            </div>
        </div>
    </div>
</div>
