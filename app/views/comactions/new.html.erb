<% provide(:title, t("comaction.add_label")) %>
<% provide(:button_text, t("add_button")) %>
<% if logged_in? %>
  <h1 class='center'>
  <%= t("comaction.add_label") %>
  </h1>
  <div class='row'>
    <div class="col-md-6 col-md-offset-1">
      <%= render 'form' %>
    </div>
    <div class="col-md-4">
      <h3 class="center"><%= t("comaction.availibility") %></h3>
      <% unless @freeZone_days.nil? %>
        <ul>
          <% @freeZone_days.each do |dday| %>
            <li>
              <%= dday.first %>
              <ul>
                <% dday.second.each do |peri| %>
                  <li>
                    <%= peri.descro %>
                  </li>
                <% end %>
              </ul>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
<% end %>
