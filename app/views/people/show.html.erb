<% provide(:title, @person.firstname) %>
<% provide(:button_text, 'Ajouter') %>
<% provide(:action, @action) %>

<div class='row'>
  <div class='col-xs-6'>
    <h3>
      <% if @person.is_client? %>
        <i class="fa fa-user client fa-2x" aria-hidden="true"></i>
      <% else %>
        <i class="fa fa-user-o" aria-hidden="true"></i>
      <% end %>
      <%= link_to @person.full_name, edit_person_path(@person), class:@class_client  %>
      <% if @person.is_jj_hired %>
        <i class="fa fa-star" aria-hidden="true"></i>
      <% end %>
    </h3>
    <hr>
    <%= render 'people/person_card' %>
    <div class='row spaceUp25'>
      <div class="col-xs-12">
        <h4 >
          <i class="fa fa-plus" aria-hidden="true"></i>
          Ajouter une expérience
        </h4>
      </div>
    </div>
    <hr class="sep"/>
    <%= render 'jobs/job_form'  %>
  </div>
  <div class='col-xs-6'>
  <div class='row'>
    <div class="col-xs-11 col-xs-offset-1">
      <h2>
        <i class="fa fa-building-o" aria-hidden="true"></i>
        Expériences
      </h2>
      <hr>
      <div class='row light_frame'>
        <div class='col-xs-1'>
          <%= fa_icon('file-text-o 2x') %>
        </div>
        <div class="col-xs-11 ">
          <%= @person.note %>
          <br>
          <%= link_to edit_person_path(@person), class:@class_client do %>
            <%= fa_icon('pencil pull-right') %>
          <% end %>
        </div>
      </div>
      <div class='row'>
        <div class="col-xs-12 emptyline"></div>
      </div>
      <% if @alljobs.nil? || @alljobs.empty? %>
        <%= render 'shared/empty_list' %>
      <% else %>
        <%= render 'people/all_jobs' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<hr class="sep">
<div class="row">
  <div class="col-xs-12">
    <% if @person.cv_docx.present?  %>
      <%= render 'html_cv' %>
    <% end %>
  </div>
</div>
