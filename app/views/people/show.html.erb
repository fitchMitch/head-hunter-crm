<% provide(:title, @person.firstname) %>
<% provide(:button_text, 'Ajouter') %>
<% provide(:action, @action) %>

<div class="row">
  <div class="col-xs-6">
    <h3>
      <i class="fa fa-user-o" aria-hidden="true"></i>
      <%= link_to @person.full_name, edit_person_path(@person), class:@class_client  %>
      <% if @person.is_jj_hired %>
      <i class="fa fa-star" aria-hidden="true"></i>
      <% end %>
    </h3>
    <hr>
    <div class="frameMe">
      <div class="row">
        <div class="col-xs-1">
          <p>
            <%= link_to  edit_person_path(@person), class:@class_client do %>
            <!-- <i class="fa fa-id-card-o fa-2x " aria-hidden="true" ></i> --><br>
            <i class="fa fa-id-badge fa-3x" aria-hidden="true"></i>
            <% end%>
          </p>
        </div>
        <div class="col-xs-10">
          <div class="row">
            <div class="col-xs-5 ">
              <strong>Fixe</strong>
            </div>
            <div class="col-xs-6">
              <%= @person.phone_number %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-5 ">
              <strong>CV (au format docx)</strong>
            </div>
            <div class="col-xs-6">
            <% if @person.cv_docx.file? %>
              <%= link_to @person.cv_docx.url, class: "badge badge-primary" do %>
                <%= @person.cv_docx_file_name %>
              <% end %>
            <% elsif !@person.is_client? %>
              <span class="small_alert">CV !</span>
            <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-5">
              <strong>Mobile</strong>
            </div>
            <div class="col-xs-6">
              <%= @person.cell_phone_number %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-5">
              <strong>Email</strong>
            </div>
            <div class="col-xs-6">
              <%= @person.email %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-5">
              <strong>Date de naissance</strong>
            </div>
            <div class="col-xs-6">
              <%= @person.birthdate %>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-5">
              <strong>Age</strong>
            </div>
            <div class="col-xs-6">
              <%=time_ago_in_words(@person.birthdate) %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row spaceUp25">
      <div class="col-xs-12">
        <h4 >
          <i class="fa fa-plus" aria-hidden="true"></i>
          Ajouter une expérience
        </h4>
      </div>
    </div>
    <hr class="sep"/>
    <%= render 'jobs/job_form'  %>
  <div class="col-xs-6">
    <div class="row">
      <div class="col-xs-1"></div>
      <div class="col-xs-11">
        <h3>
          <i class="fa fa-building-o" aria-hidden="true"></i>
          Expériences
        </h3>
        <hr>
        <%= render @jobs || 'shared/empty_list' %></div>
    </div>
  </div>
</div>
