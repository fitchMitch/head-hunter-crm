<div class="frameMe">
    <div class='row'>
        <div class='col-xs-1'>
            <p>
                <%= link_to  edit_person_path(@person), class:@class_client do %>
                <!-- <i class="fa fa-id-card-o fa-2x " aria-hidden="true" ></i> --><br>
                <i class="fa fa-id-badge fa-3x" aria-hidden="true"></i>
                <% end%>
            </p>
        </div>
        <div class="col-xs-10">
            <div class='row'>
                <div class="col-xs-5 ">
                    <strong>Fixe</strong>
                </div>
                <div class='col-xs-6'>
                    <%= @person.phone_number %>
                </div>
            </div>
            <div class='row'>
                <div class="col-xs-5 ">
                    <strong>CV (au format docx)</strong>
                </div>
                <div class='col-xs-6'>
                    <% if @person.cv_docx.file? %>
                      <%= link_to @person.cv_docx.url, class: "btn btn-primary btn-xs" do %>
                      <%= @person.cv_docx_file_name %>
                    <% end %>
                    <% elsif !@person.is_client? %>
                      <span class="small_alert">CV !</span>
                    <% end %>
                </div>
            </div>

            <div class='row'>
                <div class='col-xs-5'>
                    <strong>Mobile</strong>
                </div>
                <div class='col-xs-6'>
                    <%= @person.cell_phone_number %>
                </div>
            </div>
            <div class='row'>
                <div class='col-xs-5'>
                    <strong>Email</strong>
                </div>
                <div class='col-xs-6'>
                    <%= @person.email %>
                </div>
            </div>
            <div class='row'>
                <div class='col-xs-5'>
                    <strong>Date de naissance</strong>
                </div>
                <div class='col-xs-6'>
                    <%= @person.birthdate %>
                </div>
            </div>
            <div class='row'>
                <div class='col-xs-5'>
                    <strong>Age</strong>
                </div>
                <div class='col-xs-6'>
                    <%=time_ago_in_words(@person.birthdate) %>
                </div>
            </div>
        </div>
    </div>
</div>
