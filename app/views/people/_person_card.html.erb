<div class="frameMe">
    <div class='row'>
        <div class='col-xs-1'>
            <p>
                <%= link_to  edit_person_path(@person), class:@class_client do %>
                <!-- <i class="fa fa-id-card-o fa-2x " aria-hidden="true" ></i> --><br>
                <i class="fa fa-id-badge fa-3x" aria-hidden="true"></i>
                <% end%>
            </p>
        </div>
        <div class="col-xs-10">
            <div class='row'>
                <div class="col-xs-5 ">
                    <strong>
                      <%= t("person.phone") %>
                    </strong>
                </div>
                <div class='col-xs-6'>
                    <%= @person.phone_number %>
                </div>
            </div>
            <div class='row'>
                <div class="col-xs-5 ">
                    <strong>
                      <%= t("person.cv_docx") %>
                    </strong>
                </div>
                <div class='col-xs-6'>
                    <% if @person.cv_docx.file? %>
                      <%= link_to @person.cv_docx.url, class: "btn btn-success btn-xs" do %>
                      <%= @person.cv_docx_file_name %>
                    <% end %>
                    <% elsif !@person.is_client? %>
                      <span class="small_alert">
                        <%= t("person.no_cv") %>
                      </span>
                    <% end %>
                </div>
            </div>
            <div class='row'>
                <div class='col-xs-5'>
                    <strong>Email</strong>
                </div>
                <div class='col-xs-6'>
                    <%= @person.email %>
                </div>
            </div>
            <div class='row'>
                <div class='col-xs-5'>
                    <strong>
                      <%= t("person.approx_age") %>
                    </strong>
                </div>
                <div class='col-xs-6'>
                    <%= @person.approx_age %> <%= t("mission.years") %>
                </div>
            </div>
        </div>
    </div>
</div>
