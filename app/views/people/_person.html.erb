<% unless @people.nil? %>
<div class="row">
  <div class="col-sm-3">
    <%= link_to person do %>
        <i class="fa fa-user-o fa-2x"></i> <%= person.full_name %>
      <% end %>

  </div>
  <div class="col-sm-2">
    <p>
      <% if logged_in? %>
        <%= link_to person, method: :delete, data: { confirm: "C'est sûr,ça ?" } do %>
          <span class="glyphicon glyphicon-trash"> </span>
        <% end %>
      | <%= link_to edit_person_path(person) do %>
          <span class="glyphicon glyphicon-pencil"> </span>
        <% end %>


    <% end %>
    </p>
  </div>
  <div class="col-sm-3">
    <small>
      ajouté il y a
       <%= time_ago_in_words(person.created_at)  %>
       [<%= person.user.name %>]
    </small>
  </div>
</div>
<hr>
<% else %>
<h3>Personne n'est encore inscrit</h3>
<% end %>
