<% provide(:title, @company.company_name) %>

<div class="row">
  <div class="col-xs-4">
    <h3>
      <%= @company.company_name%>
      <small> - <%= @nr_jobs%> occurences</small>
    </h3>
  </div>
</div>
<ul>
  <%= @jobs.each do |j|  %>
  <li> <%= link_to j.person.full_name, person_path(j.person_id) %> 
    <ul>
      <li>
        <%= j.job_title %> du <%= j.start_date %> au <%= j.end_date %>
      </li>
    </ul>
  </li>
  <% end %>
</ul>
