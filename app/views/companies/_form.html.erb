<%= simple_form_for(@company) do |f| %>
<div class='row'>
    <div class="col-sm-12">
        <%= f.input :company_name, label:t('company.company_name'), input_html: {class:" input-sm"}%>
    </div>
</div>
<div class='row'>
    <div class="col-sm-12 ">
        <%= f.button :submit, yield(:button_text), class: "btn btn-success" %>
    </div>
</div>
<% end %>
