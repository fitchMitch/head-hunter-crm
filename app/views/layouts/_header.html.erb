<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "JuinJuillet", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Candidats <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to "Liste des Candidats", candidates_path %></li>
            <li><%= link_to "Créer un candidat", new_candidate_path %></li>
          </ul>
        </li>
        <% if logged_in? %>
          <li><%= link_to "Utilisateurs", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Compte <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profil", current_user %></li>
              <li><%= link_to "Paramétrage", edit_user_path(current_user) %></li>
              <% if current_user.admin? %><li>  <%= link_to "Créer un compte", signup_path %></li><% end %>
              <li class="divider"></li>
              <li>
                <%= link_to "Déconnexion", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>

        <% else %>
          <li><%= link_to "Aide", help_path %></li>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
