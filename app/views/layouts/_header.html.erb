                        <% end %>
                        <li class="divider"></li>
                        <li>
                            <%= link_to "Déconnexion", logout_path, method: "delete" %>
                        </li>
                    </ul>
                </li>

            <% else %>
                <li><%= link_to "Aide", help_path %></li>
                <li><%= link_to "Log in", login_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
