<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to "JuinJuillet", root_path, id: "logo" %>
        <nav>
            <ul class="nav navbar-nav navbar-right">
                <% if logged_in? %>
                <li>
                    <%= render 'layouts/search_form' %>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Contacts
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                          <%= link_to  people_path do %>
                            <span class="glyphicon glyphicon-list-alt"></span> Lister les contacts
                          <% end %>
                        </li>
                        <li>
                          <%= link_to  new_person_path do %>
                            <span class="glyphicon glyphicon-plus"></span> Créer un contact
                          <% end %>
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Sociétés
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to  companies_path do %>
                          <span class="glyphicon glyphicon-list-alt"></span>
                          Liste des sociétés
                      <% end %>
                    </li>
                        <li><%= link_to new_company_path  do %>
                          <span class="glyphicon glyphicon-plus"></span>
                          Créer une société
                          <% end %>
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Missions
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to  missions_path do %>
                          <span class="glyphicon glyphicon-list-alt"></span>
                          Liste des missions
                      <% end %>
                    </li>
                        <li><%= link_to new_mission_path  do %>
                          <span class="glyphicon glyphicon-plus"></span>
                          Créer une mission
                          <% end %>
                        </li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Rendez-vous
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to  comactions_path do %>
                          <span class="glyphicon glyphicon-list-alt"></span>
                          Liste des rendez-vous
                      <% end %>
                    </li>
                        <li><%= link_to new_comaction_path  do %>
                          <span class="glyphicon glyphicon-plus"></span>
                          Créer un rendez-vous
                          <% end %>
                        </li>
                    </ul>
                </li>

                <li><%= link_to  users_path do  %>JJ's <i class="fa fa-users" aria-hidden="true"></i> <% end %>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Profil", current_user %></li>
                        <li><%= link_to "Paramétrage", edit_user_path(current_user) %></li>
                        <% if current_user.admin? %>
                        <li>
                            <%= link_to "Créer un compte", signup_path %>
                          </li>
                        <% end %>
                        <li class="divider"></li>
                        <li>
                            <%= link_to "Déconnexion", logout_path, method: "delete" %>
                        </li>
                    </ul>
                </li>

            <% else %>
                <li><%= link_to "Aide", help_path %></li>
                <li><%= link_to "Log in", login_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>
