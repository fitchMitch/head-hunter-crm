    <div class="container">
        <%= link_to "JuinJuillet", root_path, id: "logo" %>
        <nav>
            <ul class="nav navbar-nav navbar-right">
                <li><%= link_to "Home", root_path %></li>
                <% if logged_in? %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Contacts
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Liste des contacts", people_path %></li>
                        <li><%= link_to "Créer un contact", new_person_path %></li>
                        <li><%= link_to "Chercher un contact", "/people/search" %></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Sociétés
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Liste des sociétés", companies_path %></li>
                        <li><%= link_to "Créer une société", new_company_path %></li>
                    </ul>
                </li>

                <li><%= link_to "JJ's team", users_path %></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="glyphicon glyphicon-user"></span>
                        <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Profil", current_user %></li>
                        <li><%= link_to "Paramétrage", edit_user_path(current_user) %></li>
