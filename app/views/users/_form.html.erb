<%= simple_form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.input :name, label: t("Name") %>
  <%= f.input :email %>
  <%= f.input :password, label: t("user.password")%>
  <%= f.input :password_confirmation, label: t("user.password_conf")%>
  <%= f.input :admin, label: t("user.admin_label")%>
  <%= f.button :submit, yield(:button_text), class: "btn btn-success" %>

<% end %>
